
{
  "appId": "app.zirmd.salesfield",
  "appName": "Å½IR-MD COMPANY",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "cleartext": true,
    "allowNavigation": [
      "*.supabase.co"
    ]
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "useLegacyBridge": false,
    "webContentsDebuggingEnabled": true,
    "buildOptions": {
      "keystorePath": null,
      "keystoreAlias": null,
      "keystorePassword": null,
      "keystoreAliasPassword": null
    },
    "gradleArgs": [
      "-Dorg.gradle.jvmargs=-Xmx2048m",
      "-Pandroid.enableJetifier=true"
    ],
    "dependencyResolutionStrategy": {
      "kotlin": {
        "version": "1.8.22",
        "excludeOldVersions": true
      },
      "strict": true,
      "alwaysUseLatestVersions": false,
      "exclusions": [
        "org.jetbrains.kotlin:kotlin-stdlib-jdk7:1.6.21",
        "org.jetbrains.kotlin:kotlin-stdlib-jdk8:1.6.21"
      ]
    },
    "useLegacyStorage": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#ffffff",
      "showSpinner": true,
      "spinnerColor": "#4F46E5",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "icon": "public/lovable-uploads/46d09936-801a-49ed-b585-95bccf81c0c8.png"
    },
    "Filesystem": {
      "appendExtension": true,
      "directory": "Downloads"
    },
    "Browser": {
      "launchLogout": true
    },
    "Permissions": {
      "permissions": [
        "storage"
      ]
    },
    "AndroidPermissions": {
      "permissions": [
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "CapacitorHttp": {
      "enabled": true
    },
    "CapacitorCookies": {
      "enabled": true
    }
  }
}
